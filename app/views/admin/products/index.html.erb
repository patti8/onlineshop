<div class="col-md-9">
    
    <%= link_to 'Add Product', new_admin_product_path, class: "btn btn-success"%>
  
    <br>
    <br>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
            <% @adm_products.each do |s|%>
                <tr>
                    <td><%= s.product_name%></td>
                    <td><%= s.description%></td>
                    <td><%= s.price%></td>
                </tr>
            <% end %>
            </tbody>
        </table>

    </div>

</div>