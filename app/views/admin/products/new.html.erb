<h1>Create New Product</h1>

<%= form_for @product, :url => {:controller => "products"} do |f|%>

  <p>
    <%= f.label :product_name %>
    <%= f.text_field :product_name%>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <!-- <p> -->
    <%# <%= f.label :rating %>
    <%# <%= f.number_field :rating%>
  <!-- </p> -->
  <p>
    <%= f.submit %>
  </p>

<% end %>
